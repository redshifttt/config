#!/bin/sh

pacman -S --needed libvirt qemu-full iptables-nft dnsmasq dmidecode bridge-utils openbsd-netcat virt-manager edk2-ovmf

usermod -a -G libvirt,kvm $USER

systemctl enable --now libvirtd.service
systemctl start virtlogd.service

sed -ri "s|(hosts:.*)|\1 libvirt libvirt_guest|" /etc/nsswitch.conf

if virsh net-list --all | grep default >/dev/null; then
    virsh net-autostart default
fi
