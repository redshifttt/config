#!/bin/sh

# POSIX-compliant fetch script

distro=$(. /etc/os-release; echo "${PRETTY_NAME}")
uptime=$(uptime -p | sed "s|up ||")
kernel=$(uname -r)
wm=$(awk '/^exec/ {print $NF}' < ~/.xinitrc)
shell=${SHELL}
editor=${EDITOR}
terminal=${TERMINAL}

printf "os:${distro}
uptime:${uptime}
kernel:${kernel}
wm:${wm}
shell:${shell}
editor:${editor}
terminal:${terminal}
" | column -s: -t -o " | "
