font pango:Cantarell 11

floating_modifier Mod4

default_border pixel 2
default_floating_border normal 2

hide_edge_borders none

focus_wrapping yes
focus_follows_mouse no
focus_on_window_activation focus

mouse_warping output
workspace_layout default
workspace_auto_back_and_forth no

bindsym Mod4+1 workspace "1"
bindsym Mod4+2 workspace "2"
bindsym Mod4+3 workspace "3"
bindsym Mod4+4 workspace "4"
bindsym Mod4+5 workspace "5"
bindsym Mod4+6 workspace back_and_forth
bindsym Mod4+Shift+1 move container to workspace number "1"; workspace "1"
bindsym Mod4+Shift+2 move container to workspace number "2"; workspace "2"
bindsym Mod4+Shift+3 move container to workspace number "3"; workspace "3"
bindsym Mod4+Shift+4 move container to workspace number "4"; workspace "4"
bindsym Mod4+Shift+5 move container to workspace number "5"; workspace "5"

bindsym Mod4+h focus left
bindsym Mod4+j focus down
bindsym Mod4+k focus up
bindsym Mod4+l focus right

bindsym Mod4+Shift+h move left
bindsym Mod4+Shift+j move down
bindsym Mod4+Shift+k move up
bindsym Mod4+Shift+l move right

bindsym Mod4+Delete exec --no-startup-id systemctl suspend
bindsym Mod4+Return exec alacritty
bindsym Mod4+d exec --no-startup-id "bemenu-run -c -W 0.2 -l20 -s -C -T -i -B 2 -M 20 --counter always -p 'open' --cw 1 --fn 'Liberation Mono 11'"
bindsym Mod4+f fullscreen toggle
bindsym Mod4+r exec --no-startup-id "i3-msg restart"
bindsym Mod4+s exec --no-startup-id "scrot"
bindsym Mod4+space floating toggle
bindsym Mod4+w kill

