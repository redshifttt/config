# sean's i3 config

# Variables
set $mod Mod4
set $terminal alacritty

set $workspace1 "1 main"
set $workspace2 "2 code"
set $workspace3 "3 music"
set $workspace4 "4 vidya"
set $workspace5 "5 misc"

# Autostart
exec --no-startup-id dunst
exec --no-startup-id picom
exec --no-startup-id nm-applet
exec --no-startup-id xwallpaper --zoom /home/sean/dotfiles/i3/.config/i3/summeryish.jpg

# Keys
bindsym $mod+r exec --no-startup-id "i3-msg restart"
bindsym $mod+Return exec $terminal

bindsym $mod+w kill

bindsym $mod+d exec --no-startup-id "bemenu-run -c -W 0.2 -l20 -s -CT -p 'run'"
bindsym $mod+s exec --no-startup-id "scrot -s"
bindsym Print exec --no-startup-id "scrot -f"
bindsym $mod+Delete exec --no-startup-id "actions"

# Movement
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+f fullscreen toggle
bindsym $mod+space floating toggle

bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace back_and_forth

bindsym $mod+Shift+1 move container to workspace number $workspace1; workspace $workspace1
bindsym $mod+Shift+2 move container to workspace number $workspace2; workspace $workspace2
bindsym $mod+Shift+3 move container to workspace number $workspace3; workspace $workspace3
bindsym $mod+Shift+4 move container to workspace number $workspace4; workspace $workspace4
bindsym $mod+Shift+5 move container to workspace number $workspace5; workspace $workspace5

default_border none

focus_follows_mouse no
focus_on_window_activation focus

floating_modifier $mod

bar {
    status_command i3blocks
    position top
    font pango:Terminus 10
    padding 2px
    tray_padding 4px
    colors {
        background #080A0E
        # separator #333333

        # <colorclass> <border> <background> <text>
        focused_workspace #232937 #232937 #ffffff
        inactive_workspace #232937 #191d27 #666666
        urgent_workspace #ffffff #ec5959 #ffffff
    }
}
